@model EntityLayer.Concrate.Experience
@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Guncelleme Səhifəsi</h3>
</div>

@using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">  Deneyim Duzenleme Sehifesi </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                       @Html.TextBoxFor(x=>x.ExperienceID , new { @class ="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Baslik</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Tarix</label>
                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Gorsel</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    </div>


                    <div class="form-group">
                        <label>Aciklama</label>
                        @Html.TextAreaFor(x => x.Description,3,10, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">Iptal</button>
                </form>
            </div>
        </div>
    </div>

}


